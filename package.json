{
  "name": "markdown-snippets",
  "displayName": "Markdown Snippets",
  "description": "Store code snippets in markdown files and automatically sync them to VSCode snippets.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Snippets"
  ],
  "repository": "https://github.com/ghill2/markdown-snippets.git",
  "keywords": [
    "mardown snippets extractor",
    "markdown snippets",
    "snippets",
    "snippet",
    "code snippets",
    "manage snippets",
    "create snippets",
    "snippet generator"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:markdown-snippets.saveSnippets"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-snippets.saveSnippets",
        "title": "Save Snippets",
        "category": "MarkdownSnippets"
      }
    ],
    "configuration": {
      "title": "MarkdownSnippets",
      "properties": {
        "markdownSnippets.markdownFolder": {
          "description": "Specify the path to the folder containing your markdown files.",
          "type": "string"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "code-blocks": "^1.1.0",
    "flat": "^5.0.2"
  }
}
